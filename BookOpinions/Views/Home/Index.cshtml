@model IEnumerable<BookOpinions.Models.ViewModels.Home.PopularBookViewModel>
@{
    ViewBag.Title = "We make good books popular";
}

<section>
    <div class="well col-md-12">
        <h2 class="media-heading">Popular Books</h2>
        <p class="col-md-12 lead">Start from reading our most popular books or login to see our full collection and recommendations.</p>
        @{int picsInRow = 6;}
        @{int rows = 3;}
        @for (int i = 0; i < rows; i++)
        {
            <div class="row">
                @foreach (var book in Model.Skip(i * picsInRow).Take(picsInRow))
                {
                    <div class="col-xs-6 col-md-2">
                        <p class="panel-title">@book.Title</p>
                        <img class="img-responsive" alt="@book.Title" src="@book.ImgUrl" />
                        <p>
                            @Html.ActionLink("Learn more", "for", "books", new { id = @book.Id}, new {@class = "btn btn-default"})
                        </p>
                    </div>
                }
            </div>
        }
    </div>
    <hr />
    <p class="col-md-12">Start from reading our most popular books or login to see our full collection and recommendations.</p>
    <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
</section>